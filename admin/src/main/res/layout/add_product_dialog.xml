<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_product_dialog_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="5dp"
    android:paddingEnd="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_linear_layout_with_corner"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Item: "
                        android:textColor="@color/grey"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/add_product_dialog_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carrot"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_product_dialog_available_stock_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available Stock"
                        android:textColor="@color/grey"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/add_product_dialog_available_stock"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/add_product_dialog_location_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/grey"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/add_product_dialog_location"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_product_dialog_grade_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Grade"
                            android:textColor="@color/grey"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/add_product_dialog_grade"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_product_dialog_weight_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="Weight"
                        android:textColor="@color/grey"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_product_dialog_weight"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_view_wtih_border"
                        android:gravity="center"
                        android:hint="KG"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@id/add_product_dialog_quantity"
                        android:selectAllOnFocus="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="Quantity"
                        android:textColor="@color/grey"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_product_dialog_quantity"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_view_wtih_border"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:selectAllOnFocus="true"
                        android:text="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/add_product_dialog_price_layout"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="Price(RM)"
                        android:textColor="@color/grey"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_product_dialog_price"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_view_wtih_border"
                        android:gravity="center"
                        android:hint="0.00"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/add_product_dialog_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/activity_basket_send_button"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/add_product_dialog_add"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="Add"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/add_product_dialog_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:indeterminateBehavior="repeat"
                android:indeterminateTint="@color/red"
                android:indeterminateTintMode="src_in"
                android:padding="15dp"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
