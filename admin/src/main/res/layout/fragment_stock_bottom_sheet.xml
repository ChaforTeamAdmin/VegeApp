<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_stock_delivery_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="?actionBarSize"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:padding="20dp"
        android:contentDescription="@string/app_name"
        android:id="@+id/fragment_stock_delivery_layout_indicator"
        android:src="@drawable/arrow_right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Date"
        android:textColor="@color/grey"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/fragment_stock_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/custom_view_wtih_border"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_stock_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Today"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@drawable/arrow_down" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Default Driver"
        android:textColor="@color/grey"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/fragment_stock_default_driver_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/custom_view_wtih_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_stock_default_driver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Please select driver here."
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@drawable/arrow_down" />

    </LinearLayout>

    <Button
        android:id="@+id/fragment_stock_assign_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/custom_button"
        android:text="Comfirm"
        android:textColor="@color/white"
        android:visibility="visible" />

</LinearLayout>


