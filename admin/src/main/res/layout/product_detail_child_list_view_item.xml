<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/farmer_dialog_list_view_item_parent_layout"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="1-14-2019"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:visibility="gone"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/product_detail_list_view_item_date"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="AhBen Farm Sdn Bhd"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/product_detail_list_view_item_farmer"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="11:51pm 1/12/2019"
        android:textColor="@color/grey"
        android:layout_below="@id/product_detail_list_view_item_farmer"
        android:id="@+id/product_detail_list_view_item_time"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Pick up by: Mr Lee"
        android:textSize="16sp"
        android:textColor="@color/line_black"
        android:layout_below="@id/product_detail_list_view_item_time"
        android:id="@+id/product_detail_list_view_item_driver"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Grade A"
        android:background="@drawable/product_list_view_item_available"
        android:textColor="@color/white"
        android:layout_below="@id/product_detail_list_view_item_driver"
        android:id="@+id/product_detail_list_view_item_grade"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="x 11"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_toStartOf="@id/product_detail_list_view_item_label_quantity"
        android:id="@+id/product_detail_list_view_item_quantity"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text=" basket"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/product_detail_list_view_item_label_quantity"
        android:layout_height="wrap_content" />

</RelativeLayout>
