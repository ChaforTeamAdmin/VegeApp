<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fragment_delivery_order_page2_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/fragment_delivery_order_page2_sub_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/label_delivery_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Delivery Detail"
                android:textColor="@color/grey"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/fragment_delivery_order_page2_deliver_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_delivery_detail"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Date"
                            android:textColor="@color/grey"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/fragment_delivery_order_page2_date_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_view_wtih_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fragment_delivery_order_page2_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:ellipsize="end"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:text="Today"
                                android:textColor="@color/grey"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="20dp"
                                android:src="@drawable/arrow_down" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Customer"
                            android:textColor="@color/grey"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/fragment_delivery_order_page2_customer_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_view_wtih_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fragment_delivery_order_page2_customer"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:ellipsize="end"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:text="Please Select A Customer Here"
                                android:textColor="@color/grey"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="20dp"
                                android:src="@drawable/arrow_down" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivered By"
                                android:textColor="@color/grey"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" *Optional"
                                android:textColor="@color/red"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/fragment_delivery_order_page2_driver_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_view_wtih_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fragment_delivery_order_page2_driver"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:ellipsize="end"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:text="Please Select A Driver Here"
                                android:textColor="@color/grey"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="20dp"
                                android:src="@drawable/arrow_down" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <ImageView
                android:id="@+id/fragment_delivery_order_page2_deliver_detail_layout_button"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_below="@+id/fragment_delivery_order_page2_deliver_detail_layout"
                android:background="@drawable/custom_button_with_color_white_and_ripple_effect"
                android:padding="21dp"
                android:src="@drawable/arrow_up" />

            <TextView
                android:id="@+id/fragment_delivery_order_page2_label_selected_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_delivery_order_page2_deliver_detail_layout_button"
                android:padding="5dp"
                android:text="Selected Item"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.jby.admin.others.NonScrollExpandableListView
                android:id="@+id/fragment_delivery_order_page2_added_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_delivery_order_page2_label_selected_item" />

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_delivery_order_page2_add_product_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/action_bar_color"
        android:src="@drawable/add_icon"
        app:layout_anchor="@id/fragment_delivery_order_page2_parent_layout"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>







