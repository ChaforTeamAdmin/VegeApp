<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_black"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent">

    <include
        layout="@layout/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/dialog_background"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/remark_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_condensed"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="start"
            android:textSize="16sp"
            android:id="@+id/remark_dialog_label"
            android:fontFamily="@string/font_family_condensed"
            android:text="Remark information:"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/remark_dialog_spinner"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:fontFamily="@string/font_family_condensed" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="phone"
            android:textColor="@color/black"
            android:gravity="start"
            android:textSize="16sp"
            android:id="@+id/remark_dialog_input"
            android:background="@drawable/custom_linear_layout_with_corner"
            android:fontFamily="@string/font_family_condensed"
            android:hint="Please enter the correct weight"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="@drawable/custom_button"
            android:fontFamily="@string/font_family_condensed"
            android:id="@+id/remark_dialog_remark_button"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>


