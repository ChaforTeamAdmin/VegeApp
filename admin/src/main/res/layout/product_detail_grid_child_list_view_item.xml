<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        android:id="@+id/product_detail_child_list_view_parent_layout"
        android:layout_height="?actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textStyle="bold"
                android:id="@+id/product_detail_child_list_view_weight"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/product_detail_child_list_view_grade"
                android:ellipsize="end"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/transparent_black"
                android:visibility="gone"
                android:id="@+id/product_detail_child_list_view_ticked_layout"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:id="@+id/product_detail_child_list_view_tick_icon"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/tick_icon"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:contentDescription="@string/app_name"
                android:id="@+id/product_detail_child_list_view_warning_icon"
                android:src="@drawable/warning_icon"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
