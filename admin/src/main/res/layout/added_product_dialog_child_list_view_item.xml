<?xml version="1.0" encoding="utf-8"?>
<mobile.sarproj.com.layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:draggedItem="@id/parent_view"
    app:rightItem="@id/added_product_dialog_child_delete_view"
    app:swipeDirection="left">

    <ImageView
        android:id="@+id/added_product_dialog_child_delete_view"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/red"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/garbage" />

    <LinearLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/added_product_dialog_child_weight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12KG"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/added_product_dialog_child_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="X5"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/added_product_dialog_child_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:gravity="end"
                android:padding="5dp"
                android:text="Price: RM 8.90"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/added_product_dialog_child_stock_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="Sock : 2019/08/02"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/added_product_dialog_child_grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="Grade A"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/added_product_dialog_child_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="Location Farmer A"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</mobile.sarproj.com.layout.SwipeLayout>

