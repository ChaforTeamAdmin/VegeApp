<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pickUp.PickUpActivity">

    <include
        layout="@layout/actionbar"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farmer"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/activity_pick_up_farmer_layout"
                android:background="@drawable/custom_view_wtih_border"
                android:layout_height="?actionBarSize">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:text="Please Select Farmer"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/activity_pick_up_farmer"
                    android:textSize="20sp"
                    android:textColor="@color/grey"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/activity_pick_up_arrow_down"
                    android:padding="20dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please select the item"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/grey" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:textColor="@color/white"
                android:text="Click to add item"
                android:textStyle="bold"
                android:enabled="false"
                android:id="@+id/activity_pick_up_select_item"
                android:background="@drawable/custom_disable_button"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Item"
                android:padding="10dp"
                android:id="@+id/activity_pick_up_label_selected_item"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/grey" />

            <com.jby.vegeapp.others.ExpandableHeightListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_pick_up_add_product_list"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>