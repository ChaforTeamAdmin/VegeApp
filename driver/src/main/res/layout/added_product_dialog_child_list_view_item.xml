<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="35KG"
        android:textSize="16sp"
        android:id="@+id/added_product_dialog_child_weight"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textColor="@color/grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="(Grade A)"
        android:id="@+id/added_product_dialog_child_grade"
        android:layout_toEndOf="@id/added_product_dialog_child_weight"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="X5"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/added_product_dialog_child_grade"
        android:padding="5dp"
        android:id="@+id/added_product_dialog_child_quantity"
        android:textColor="@color/grey" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:id="@+id/added_product_dialog_child_delete"
        android:layout_alignParentEnd="true"
        android:src="@drawable/trash_icon" />

    </RelativeLayout>

</RelativeLayout>
